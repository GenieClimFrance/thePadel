    // Afficher le bandeau pour les visiteurs venant d'un autre pays
    "DenyAllCta": true,
    
    // Accepter tous les cookies par d√©faut
    "AcceptAllCta": true,
    
    // URL de la page de cookies
    "highPrivacy": true,
    
    // Gestion des cookies de navigation
    "handleBrowserDNTRequest": false,
    
    // Suppression des cookies lors du refus
    "removeCredit": false,
    
    // Afficher plus d'infos sur les services
    "moreInfoLink": true,
    
    // Utiliser un cookie pour m√©moriser le consentement
    "useExternalCss": false,
    
    // Utiliser un JS externe
    "useExternalJs": false,
    
    // Lire plus de lien
    "readmoreLink": "/politique-de-confidentialite",
    
    // Afficher un bandeau obligatoire
    "mandatory": false,
    
    // Nombre de jours avant l'expiration du consentement
    "cookieDomain": "",
    
    // Gestion des services
    "bodyPosition": "bottom",
    
    // Accepter tous les services d'un groupe en un clic
    "groupServices": true
