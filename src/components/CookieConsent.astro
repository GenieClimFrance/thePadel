    // Afficher un avertissement sur l'accueil
    "groupServices": false,
    
    // Afficher les alertes lorsqu'un service est autoris√©/refus√©
    "showAlertSmall": true,
    "cookieslist": true,
    
    // Fermeture automatique de l'alerte
    "closePopup": false,
    
    // Afficher le bouton "Tout refuser"
    "showIcon": true,
    
    // Position de l'ic√¥ne (BottomRight, BottomLeft, TopRight, TopLeft)
