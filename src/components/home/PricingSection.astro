---
// Pricing section for formulas and subscriptions
---

<section class="py-16 mx-4 bg-white lg:py-16">
  <div class="max-w-4xl mx-auto flex flex-col items-center">
    <!-- Titre -->
    <h2
      class="text-3xl sm:text-4xl md:text-5xl font-impact font-bold uppercase mb-12 text-center"
    >
      FORMULES ET <span class="text-[#008AEF]">ABONNEMENTS</span>
    </h2>
    <!-- Cartes -->
    <div
      class="flex flex-col lg:flex-row justify-center items-stretch gap-8 w-full"
    >
      <!-- Heures creuses -->
      <div class="flex-1 flex justify-center">
        <div
          class="rounded-[1.65rem] p-[3px] bg-gradient-to-tr from-[#008AEF] to-[#12EF97] w-full max-w-md"
        >
          <div
            class="bg-[#f8f8f8] rounded-[1.5rem] flex flex-col items-center justify-center py-12 px-8 h-full"
          >
            <h3
              class="font-impact text-xl sm:text-2xl font-bold uppercase text-center mb-6"
            >
              HEURES CREUSES
            </h3>
            <div
              class="font-impact text-3xl sm:text-4xl font-bold text-[#222] mb-2"
            >
              12&nbsp;€
            </div>
            <div class="text-[#222] font-raleway text-lg mb-6">
              90 min / Personne
            </div>
            <hr class="border-t-2 border-[#12EF97] w-2/3 my-4" />
            
            <!-- Lundi au vendredi -->
            <div class="text-[#222] font-raleway text-center text-sm mb-4 w-full">
              <div class="font-bold text-base mb-2">Lundi au vendredi</div>
              <div class="space-y-1">
                <div>09h00 - 12h00</div>
                <div>15h00 - 18h00</div>
                <div>22h30 - 00h00</div>
              </div>
            </div>

            <!-- Dimanche -->
            <div class="text-[#222] font-raleway text-center text-sm mb-6 w-full">
              <div class="font-bold text-base mb-2">Dimanche</div>
              <div>16h30 - 00h00</div>
            </div>

            <hr class="border-t-2 border-[#12EF97] w-2/3 my-4" />
            <div class="font-impact text-base text-[#222] text-center mt-2">
              Soit 48€ le terrain pour 1h30
            </div>
          </div>
        </div>
      </div>
      <!-- Heures pleines -->
      <div class="flex-1 flex justify-center">
        <div
          class="rounded-[1.65rem] p-[3px] bg-gradient-to-tr from-[#008AEF] to-[#12EF97] w-full max-w-md"
        >
          <div
            class="bg-[#2B2E36] rounded-[1.5rem] flex flex-col items-center justify-center py-12 px-8 h-full"
          >
            <h3
              class="font-impact text-xl sm:text-2xl font-bold uppercase text-center text-white mb-6"
            >
              HEURES PLEINES
            </h3>
            <div
              class="font-impact text-3xl sm:text-4xl font-bold text-white mb-2"
            >
              15&nbsp;€
            </div>
            <div class="text-white font-raleway text-lg mb-6">
              90 min / Personne
            </div>
            <hr class="border-t-2 border-[#12EF97] w-2/3 my-4 opacity-80" />
            
            <!-- Lundi au vendredi -->
            <div class="text-white font-raleway text-center text-sm mb-4 w-full">
              <div class="font-bold text-base mb-2">Lundi au vendredi</div>
              <div class="space-y-1">
                <div>12h00 - 15h00</div>
                <div>18h00 - 22h30</div>
              </div>
            </div>

            <!-- Samedi -->
            <div class="text-white font-raleway text-center text-sm mb-4 w-full">
              <div class="font-bold text-base mb-2">Samedi</div>
              <div>09h00 - 00h00</div>
            </div>

            <!-- Dimanche -->
            <div class="text-white font-raleway text-center text-sm mb-6 w-full">
              <div class="font-bold text-base mb-2">Dimanche</div>
              <div>09h00 - 16h30</div>
            </div>

            <hr class="border-t-2 border-[#12EF97] w-2/3 my-4 opacity-80" />
            <div class="font-impact text-base text-white text-center mt-2">
              Soit 60€ le terrain pour 1h30
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

